{
  "version": 2,
  "builds": [
    {
      "src": "frontend-new/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend-new/api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend-new/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend-new/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "JWT_SECRET": "@jwt_secret",
    "NODE_ENV": "production"
  },
  "functions": {
    "backend-new/api/index.ts": {
      "maxDuration": 30
    }
  }
}